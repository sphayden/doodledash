# Development Environment Configuration
REACT_APP_ENVIRONMENT=development
REACT_APP_SERVER_URL=http://localhost:3001

# Feature Flags
REACT_APP_ENABLE_DEVTOOLS=true
REACT_APP_DEBUG_MODE=true
REACT_APP_ENABLE_PERFORMANCE_MONITORING=true
REACT_APP_ENABLE_ERROR_REPORTING=false

# Logging Configuration
REACT_APP_LOG_LEVEL=debug
REACT_APP_ENABLE_CONSOLE_LOGGING=true
REACT_APP_ENABLE_REMOTE_LOGGING=false

# Game Configuration
REACT_APP_DRAWING_TIME_LIMIT=60
REACT_APP_MAX_PLAYERS=8
REACT_APP_ENABLE_REALTIME_DRAWING=true

# Development Features
REACT_APP_ENABLE_TEST_UTILS=true
REACT_APP_ENABLE_MOCK_DATA=true
REACT_APP_AUTO_CONNECT_DEV=false

# Network Configuration
REACT_APP_SOCKET_TIMEOUT=10000
REACT_APP_RECONNECT_ATTEMPTS=5
REACT_APP_RECONNECT_DELAY=2000